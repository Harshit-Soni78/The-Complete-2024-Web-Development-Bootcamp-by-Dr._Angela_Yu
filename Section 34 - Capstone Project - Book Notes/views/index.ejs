
<%- include('partials/header.ejs') %>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">My Book Notes</h1>
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                Sort by
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li><a class="dropdown-item" href="/?orderBy=rating">Rating</a></li>
                <li><a class="dropdown-item" href="/?orderBy=date_read">Recency</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/">Clear</a></li>
            </ul>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% books.forEach(book => { %>
            <div class="col">
                <div class="card h-100">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <% if (book.isbn) { %>
                                <img src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-L.jpg" class="img-fluid rounded-start" alt="<%= book.title %> cover">
                            <% } else { %>
                                <img src="/images/no-cover.png" class="img-fluid rounded-start" alt="No cover available">
                            <% } %>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= book.title %></h5>
                                <p class="card-text"><small class="text-muted">by <%= book.author %></small></p>
                                <p class="card-text"><strong>Rating: <%= book.rating %>/10</strong></p>
                                <p class="card-text"><small class="text-muted">Read on: <%= new Date(book.date_read).toLocaleDateString() %></small></p>
                                <p class="card-text"><%= book.review %></p>
                                <div class="d-flex justify-content-end">
                                    <a href="/books/<%= book.id %>/edit" class="btn btn-sm btn-outline-primary me-2">Edit</a>
                                    <form action="/books/<%= book.id %>/delete" method="POST">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('partials/footer.ejs') %>
